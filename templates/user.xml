<templateSet group="user">
  <template name="date" value="$date$" description="Press TAB to insert dete here" toReformat="false" toShortenFQNames="true">
    <variable name="date" expression="date()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="OTHER" value="true" />
    </context>
  </template>
  <template name="datetime" value="$datetime$" description="Press TAB to insert detetime here" toReformat="false" toShortenFQNames="true">
    <variable name="datetime" expression="date(&quot;yyyy-MM-dd HH:mm:ss&quot;)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="OTHER" value="true" />
    </context>
  </template>
</templateSet>